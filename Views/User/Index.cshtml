@model List<LaVie.Models.User>;
@using LaVie.Structs;
@{
    ViewData["Title"] = "Users"; // <title>@ViewData["Title"]</title>
}

<div class="flex justify-between items-center mb-3">
    @await Html.PartialAsync("Components/_Breadcrumbs")    
    @await Html.PartialAsync("Components/_CreateButton", "User")
</div>

@if (Model.Count > 0)
{
    <div class="overflow-x-auto">
        <table class="table striped">
            <thead>
                <th>ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                @if (ViewBag.ActiveUserRole == "Admin") {
                    <th>Actions</th>
                }
            </thead>
            <tbody>
                @foreach (User user in Model)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.FirstName</td>
                        <td>@user.LastName</td>
                        <td>@user.Email</td>
                        @if (ViewBag.ActiveUserRole == "Admin") {
                            <td>
                                <div class="flex gap-2">
                                    @await Html.PartialAsync("Components/_UpdateButton", new UpdateButtonStruct("User", user.Id))
                                    @await Html.PartialAsync("Components/_DeleteButton", new DeleteButtonStruct("User", user.Id))
                                </div>
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
} else {
    <div class="alert">
        <i class="material-icons">warning</i>
        <p>No user defined yet!</p>
    </div>   
}
