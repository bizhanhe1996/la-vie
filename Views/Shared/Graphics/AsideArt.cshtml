@{
    var themes = new string[] { "success", "contrast", "danger", "secondary" };
}
<svg width="196" height="196" xmlns="http://www.w3.org/2000/svg" stroke-width="4" fill="none">
    <defs>
        @for (var i = 0; i < themes.Length; i++)
        {
            <linearGradient id="circles-grad-@i" x1="0" y1="0" x2="1" y2="0">
                <stop offset="0%" stop-color="var(--theme-color-@themes[i])" />
                <stop offset="100%" stop-color="transparent" />
            </linearGradient>
        }
    </defs>
    <circle cx="32" cy="64" r="16" stroke="url(#circles-grad-0)" />
    <circle cx="32" cy="168" r="72" stroke="url(#circles-grad-1)" />
    <circle cx="148" cy="206" r="32" stroke="url(#circles-grad-2)" />
    <circle cx="148" cy="96" r="42" stroke="url(#circles-grad-3)" />
</svg>